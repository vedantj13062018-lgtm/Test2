<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Allow HTTPS traffic -->
    <base-config cleartextTrafficPermitted="false">
        <trust-anchors>
            <certificates src="system" />
        </trust-anchors>
    </base-config>
    
    <!-- Allow cleartext traffic for specific domains (development only) -->
    <!-- This matches the Swift app which uses HTTP for local server -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">192.168.1.250</domain>
        <domain includeSubdomains="true">localhost</domain>
        <domain includeSubdomains="true">10.0.2.2</domain>
        <!-- Allow all local IPs for development -->
        <domain includeSubdomains="true">127.0.0.1</domain>
    </domain-config>
</network-security-config>
